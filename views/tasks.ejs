<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_header') %>
  <h1>Tasks</h1>
  <table id="tasks-table">
    <tr>
      <td>
        <h3>To watch</h3>
        <ul id="category-1" class="category"></ul>
      </td>
      <td>
        <h3>To eat</h3>
        <ul id="category-2" class="category"></ul>
      </td>
    </tr>
    <tr>
      <td>
        <h3>To read</h3>
        <ul id="category-3" class="category"></ul>
      </td>
      <td>
        <h3>To buy</h3>
        <ul id="category-4" class="category"></ul>
      </td>
    </tr>
  </table>

  <form id="editTaskForm" style="display: none">
    <label>Category</label>
    <select id="edit-category">
      <option value="1">To watch</option>
      <option value="2">To eat</option>
      <option value="3">To read</option>
      <option value="4">To buy</option>
    </select>
    <label>Content</label>
    <input id="edit-content" type="text" />
    <input id="edit-id" type="hidden" />
    <label>Completed</label>
    <input id="edit-completed" type="checkbox" value="false"/>
  <button type="submit" class="btn btn-primary">Save</button>
  </form>
</body>

</html>
